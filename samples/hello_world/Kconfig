config APP_VERSION
    string "Application version"
    default "VERSION_MAJOR=$(VERSION_MAJOR) VERSION_MINOR=$(VERSION_MINOR) PATCHLEVEL=$(PATCHLEVEL) VERSION_TWEAK=$(VERSION_TWEAK) APPVERSION=$(APPVERSION) APP_VERSION_EXTENDED_STRING=$(APP_VERSION_EXTENDED_STRING) APP_VERSION_TWEAK_STRING=$(APP_VERSION_TWEAK_STRING)"

source "Kconfig.zephyr"
